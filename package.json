{
  "name": "ansilove.ts",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "TypeScript implementation of ansilove.js",
  "license": "MIT",
  "homepage": "https://github.com/ourongxing/ansilove.ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ourongxing/ansilove.ts.git"
  },
  "bugs": {
    "url": "https://github.com/ourongxing/ansilove.ts/issues"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm run typecheck && tsdown src/index.ts",
